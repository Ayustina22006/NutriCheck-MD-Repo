<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="50dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".auth.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/background_button"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Email Address Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/email_address"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textStyle="bold"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Password Field -->
        <!-- Password Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <!-- Gembok Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/gembok"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_your_password"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="6dp" />

            <!-- Toggle Password Icon -->
            <ImageView
                android:id="@+id/btnTogglePassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/solid_eye"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Sign In Button -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:backgroundTint="@color/prymary_color"
            android:textColor="@android:color/white"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textSize="16sp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Social Media Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google"
                android:layout_marginEnd="3dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In With Google"
                android:textColor="@color/prymary_color"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnGetStarted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/plus_jakarta_sans_medium" />

            <TextView
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="14sp"
                android:textColor="@color/prymary_color"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
