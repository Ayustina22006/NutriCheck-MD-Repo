<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".auth.register.form.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/background_button"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Username Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/_3_user"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Name"
                android:textStyle="bold"
                android:fontFamily="@font/plus_jakarta_sans"
                android:background="@android:color/transparent"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Email Address Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <com.example.nutricheck.auth.MyEditText
                android:id="@+id/etEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Password Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/gembok"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <com.example.nutricheck.auth.MyEditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_your_password"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="6dp" />

            <ImageView
                android:id="@+id/btnTogglePassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/solid_eye"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Confirm Password Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_confirmation"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_text"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/gembok"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:tint="@color/prymary_color" />

            <com.example.nutricheck.auth.MyEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_your_password"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="6dp" />

            <ImageView
                android:id="@+id/btnToggleConfirmPassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/solid_eye"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:backgroundTint="@color/prymary_color"
            android:textColor="@android:color/white"
            android:fontFamily="@font/plus_jakarta_sans_extra_bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:paddingVertical="10dp" />

        <!-- Sign Up Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnGetStarted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/plus_jakarta_sans" />

            <TextView
                android:id="@+id/btnSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="14sp"
                android:textColor="@color/prymary_color"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
